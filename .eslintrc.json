{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "curly": "warn",
        "eqeqeq": ["warn", "allow-null"],
        "no-throw-literal": "warn"
    }
}
